{
    "name": "notification-client",
    "version": "1.0.0",
    "description": "跨平台通知監控程式 - Electron 版本",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/13g7895123/notification_windows.git"
    },
    "main": "dist/main/index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\"",
        "dev:main": "tsc -p tsconfig.main.json --watch",
        "dev:preload": "tsc -p tsconfig.preload.json --watch",
        "dev:renderer": "vite",
        "build": "npm run build:main && npm run build:preload && npm run build:renderer",
        "build:main": "tsc -p tsconfig.main.json",
        "build:preload": "tsc -p tsconfig.preload.json",
        "build:renderer": "vite build",
        "start": "NODE_ENV=development electron .",
        "start:prod": "electron .",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "package": "npm run build && electron-builder",
        "package:win": "npm run build && electron-builder --win",
        "package:mac": "npm run build && electron-builder --mac",
        "package:linux": "npm run build && electron-builder --linux"
    },
    "keywords": [
        "notification",
        "electron",
        "desktop",
        "cross-platform"
    ],
    "author": {
        "name": "13g7895123",
        "email": "13g7895123@users.noreply.github.com"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "vitest": "^1.6.1"
    },
    "dependencies": {
        "electron-store": "^8.1.0"
    }
}
